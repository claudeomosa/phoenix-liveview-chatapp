<p class="text-center pt-8 pb-6">
  Welcome to <strong> <%= @room_id%>'s </strong> chat room, you are <strong class="underline italic"><%= @username %></strong>
</p>

<section class="w-4/5 mx-auto">
  <div id="chat-container" class="flex border bg-slate-300 p-2 justify-between h-[40rem] ">
    <div id="chat-messages" class="grow" phx-update="append">
      <%= for message <- @messages do %>
       <p id="<%= message.uuid %>"><span class="font-semibold"><%= message.username%>:</span> <%= message.text%> </p>
       <br>
      <% end %>
    </div>

    <div id="user-list">
    <h6 class="font-semibold" >Active Members</h6>
      <p>user 1</p>
      <p>user 2</p>
    </div>
  </div>
    <%= f = form_for :chat, "#", id: "chat-form", phx_submit: :submit_message, phx_change: :form_update %> 
    <%= text_input f, :message, placeholder: "Enter your text message...", value: @message, class: "w-full mt-4" %>
    </form>

</section>
